{
  "manifest_version": 3,
  "name": "Comed-Storage",
  "version": "1.0",
  "description": "Vue 3 + TypeScript Google Chrome Extension For Comed",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
