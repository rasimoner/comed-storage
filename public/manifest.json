{
  "manifest_version": 3,
  "name": "Comed-Storage",
  "version": "2.0",
  "description": "Vue 3 + TypeScript Google Chrome Extension For Comed",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo_16.png",
      "32": "images/logo_32.png",
      "48": "images/logo_48.png",
      "128": "images/logo_128.png"
    }
  },
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
